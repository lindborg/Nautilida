package nautilida.buttons {	import flash.events.MouseEvent;	import nautilida.elements.Element;		public class Button extends Element {		public var offsetAlpha:Number = 0;				public function Button() {			buttonMode = true;			mouseChildren = false;						addEventListener(MouseEvent.MOUSE_OVER,onMouseOver);			addEventListener(MouseEvent.MOUSE_OUT,onMouseOut);			addEventListener(MouseEvent.MOUSE_DOWN,onMouseDown);		}		private function onMouseOver(event:MouseEvent):void {			gotoAndStop('over');			alpha -= offsetAlpha;		}		private function onMouseOut(event:MouseEvent):void {			gotoAndStop('up');			alpha += offsetAlpha;		}		private function onMouseDown(event:MouseEvent):void {			gotoAndStop('down');		}	}}