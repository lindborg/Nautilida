package nautilida.elements {	import flash.display.DisplayObject;	import flash.display.MovieClip;	import nautilida.Platform;	import nautilida.levels.Level;	import nautilida.weapons.*;		public class Element extends MovieClip {		public function Element() {			stop();		}		public function align(object:DisplayObject):void {			x = object.x;			y = object.y;		}		public function remove():void {			visible = false;			parent.removeChild(this);		}		public function die():void {			explode();			remove();		}		public function explode():void {			var explosion:Explosion = new Explosion();			explosion.align(this);						level.addExplosion(explosion);		}		public function get platform():Platform {			return MovieClip(root).platform as Platform;		}		public function get level():Level {			return platform.level;		}		public function get isOutOfBounds():Boolean {			var bounds:Object = level.bounds;			if(x < bounds.left-width || x > bounds.right+width || y < bounds.top-height || y > bounds.bottom+height) {				return true;			}			return false;		}		public function get isOutOfSight():Boolean {			if(x < (level.x*-1)-width || x > ((level.x*-1)+stage.stageWidth)+width || y < (level.y*-1)-height || y > ((level.y*-1)+stage.stageHeight)+height) {				return true;			}			return false;		}	}}