package nautilida.weapons {	import flash.display.DisplayObject;	import flash.display.MovieClip;	import flash.events.Event;	import nautilida.elements.*;	import nautilida.points.*;		public class Weapon extends Element {		public var speedX:Number = 0;		public var speedY:Number = 0;		public var directionX:Number = 1;		public var directionY:Number = 1;				public function Weapon() {			play();			addEventListener(Event.ADDED_TO_STAGE,onAdded);		}		private function onAdded(event:Event):void {			addEventListener(Event.REMOVED_FROM_STAGE,onRemoved);			addEventListener(Event.ENTER_FRAME,onEnterFrame);		}		private function onRemoved(event:Event):void {			removeEventListener(Event.REMOVED_FROM_STAGE,onRemoved);			removeEventListener(Event.ENTER_FRAME,onEnterFrame);		}		private function onEnterFrame(event:Event):void {			x += speedX*directionX;			y += speedY*directionY;						scaleX = directionX;			scaleY = directionY;						if(isOutOfSight || hitTest()) {				remove();			}		}		private function hitTest():void {			for(var i:uint = 0; parent.numChildren > i; i++) {				var child:DisplayObject = parent.getChildAt(i);				if(child is Point) {					if(child.hitTestObject(this)) {						var point:Point = child as Point;						point.die();						die();						break;					}				}			}		}	}}