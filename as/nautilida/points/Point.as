package nautilida.points {	import flash.events.Event;	import nautilida.elements.Element;		public class Point extends Element {		public var value:int = 1;				public function Point() {			stop();						value = Math.ceil(scaleX);						addEventListener(Event.ADDED_TO_STAGE,onAdded);		}		private function onAdded(event:Event):void {			addEventListener(Event.REMOVED_FROM_STAGE,onRemoved);		}		private function onRemoved(event:Event):void {			removeEventListener(Event.REMOVED_FROM_STAGE,onRemoved);		}		public function achive():int {			var achived:int = Math.ceil(value);			value = 0;									play();						return level.achive(achived);		}	}}